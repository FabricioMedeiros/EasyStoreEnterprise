@using ECE.WebApp.MVC.Extensions
@inject IUser AppUser

<ul class="navbar-nav">
    @if (AppUser.IsAuthenticated())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Olá @AppUser.GetUserEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Sair</a>
        </li>
    }
    else
    {
        <li class="nav-item" style="padding-right: 30px;">
            <a class="btn btn-primary" style="width:150px;" asp-controller="Auth" asp-action="Login">Entrar</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-success" style="width:150px;" asp-controller="Auth" asp-action="Register">Crie sua conta</a>
        </li>
    }
</ul>
