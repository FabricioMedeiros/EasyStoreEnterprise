@model ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

@{
    if (Model == null)
    {
        <div class="container">
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-8">
                    <h2>Ooops! Ocorreu um erro, mas não se preocupe. Nosso time será avisado e iremos corrigir em breve!</h2>
                </div>
            </div>
        </div>
    }
    else
    {
        ViewData["Title"] = Model.Title;

        <div class="container w-75" style="padding-top:150px;">
            <div class="row">
                <div class="col-md-3 flex-column text-center">
                    <img src="~/images/attention.png" style="width:150px;"/>
                </div>    
                <div class="col-md-7 d-flex flex-column justify-content-center text-center" style="margin-top:20px;">
                    <h4>@Html.Raw(Model.Message)</h4>
                </div>
                <div class="col-md-2">

                </div>
            </div>
        </div>    

    }
}
